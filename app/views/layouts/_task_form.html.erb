
<div class="container">

  <div class="row ml-3">
      <div class="offset-md-3 col-md-6 offset-md-3">
          <%= form_with model: task, class: "form", id: "contact-form"  do |f| %>
              <div class="form-group">
                  <%= f.label "Task", class: "form-label" %>
                  <%= f.text_field :title, class: "form-control", placeholder: "Buy burgers" %>
              </div>
              <div class="form-group">
                  <%= f.label "Deadline", class: "form-label" %>
                  <%= f.date_field :deadline, class: "form-control" %>

              </div>
              <div class="form-group">
                  <%= f.label "Category", class: "form-label" %>
                  <%= select_tag "Category", options_from_collection_for_select(@categories, "id", "title", "1"), class: "form-control"  %>
              </div>

              <div class="text-center">
                  <%= f.submit "Create task", class: "btn btn-start-order" %>
              </div>
          <%end%>
      </div>
  </div>
