<div class="container" >
  
  <%= button_to  "Receive email", emails_path, class: "btn btn-primary mt-3", method: 'post', remote: true %>

  <div class="p-1 box my-3">
    <div class="row" >
      <div class="col-lg-4 pr-1" >
        <h3 class="list-group-item box text-center"> Emails list </h3>
      </div>
      <div class="col-lg-8 pl-1" >
        <h3 class="list-group-item box text-center"> Mail content </h3>
      </div>
    </div>

    <div class="row" >
      <div class="col-lg-4 pr-1" >
        <div id="mail-list" class="list-group box box-height overflow-auto">
          <% @emails.each do |email| %>
            <%= render 'email_list_element', email: email %>
          <% end %>
        </div>
      </div>
      <div class="col-lg-8 pl-1" >
        <div id="mail-content" >
          <%= render 'select_display' %>
        </div>
      </div>
    </div>
  </div>
</div>
