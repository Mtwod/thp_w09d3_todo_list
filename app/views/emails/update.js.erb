<% if @email.read %>
  if (document.getElementById("email-<%= @email.id %>").classList.contains("font-weight-bold")) { 
    document.getElementById("email-<%= @email.id %>").classList.remove("font-weight-bold");
  }
<% else %>
  if (document.getElementById("email-<%= @email.id %>").classList.contains("font-weight-bold")) { ; } else {
    document.getElementById("email-<%= @email.id %>").classList.add("font-weight-bold");
  }
<% end %>

document.getElementById("mail-content").innerHTML = "";
document.getElementById("mail-content").insertAdjacentHTML("afterbegin", "<%= j render 'email_content', email: @email %>");
